{
  "name": "swi-sh",
  "version": "0.1.0",
  "bin": "dist/cli.js",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "esbuild src/cli.tsx --bundle --platform=node --format=esm --outfile=dist/cli.js --external:react --external:ink --external:meow",
    "dev": "esbuild src/cli.tsx --bundle --platform=node --format=esm --outfile=dist/cli.js --external:react --external:ink --external:meow --watch",
    "format": "prettier --write .",
    "test": "NODE_ENV=test npm run test:compile && NODE_ENV=test ava",
    "test:compile": "esbuild test.tsx --bundle --platform=node --format=esm --outfile=dist/test.js --external:react --external:ink --external:ava --external:ink-testing-library"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "ink": "^6.0.1",
    "meow": "^13.2.0",
    "react": "^19.1.0"
  },
  "devDependencies": {
    "@ava/typescript": "^6.0.0",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@vdemedes/prettier-config": "^2.0.1",
    "ava": "^6.4.1",
    "chalk": "^5.4.1",
    "esbuild": "^0.25.7",
    "eslint-config-xo-react": "^0.28.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "ink-testing-library": "^4.0.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "xo": "^1.2.1"
  },
  "ava": {
    "files": [
      "dist/test.js"
    ],
    "timeout": "5s"
  },
  "xo": {
    "extends": "xo-react",
    "prettier": true,
    "rules": {
      "react/prop-types": "off",
      "unicorn/expiring-todo-comments": "off"
    }
  },
  "packageManager": "pnpm@9.15.5+sha256.8472168c3e1fd0bff287e694b053fccbbf20579a3ff9526b6333beab8df65a8d"
}
